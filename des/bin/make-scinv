#!/usr/bin/env python
"""
Create scinv in chunks
"""
from __future__ import print_function
import os,sys
import des
import argparse

parser = argparse.ArgumentParser(description=__doc__)
parser.add_argument("version", help="version of P(z) h5 file")
parser.add_argument("type", help="catalog type, e.g. skynet")
parser.add_argument("chunksize", help="size of each chunk",type=int)
parser.add_argument("chunk", help="chunk to process",type=int)

   
def main():
    args = parser.parse_args()

    sc=des.pz.SCinv(args.version,
                    args.type,
                    args.chunksize,
                    args.chunk)
    sc.make_chunk()

main()
