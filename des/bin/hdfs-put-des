#!/bin/bash

function usage_and_exit {
    echo "
    usage: hdfs-put-des [-c] filelist
        messages are sent on stdout, the pv progress on stderr
        so you probably want to redirect the stdout to a log file

        Send -c to clobber existing files.
    "
    exit 45
}

if [[ $# -lt 1 ]]; then
    usage_and_exit
fi

clobber="N"
while getopts "c" Option
  do
  case $Option in
      c)  clobber="Y" ;;
      [?]) usage_and_exit ;;
  esac
done
shift $(($OPTIND - 1))

flist=$1

hdfs_root="hdfs:///user/esheldon/DES"

pv -l "$flist" | while read fname; do

    hdfs_name=`echo "$fname" | sed 's;'$DESDATA';'$hdfs_root';'`

    d=`dirname ${hdfs_name}`
    hadoop fs -test -e $d &> /dev/null
    if [[ $? != "0" ]]; then
        echo "Creating dir $d"
        hadoop fs -mkdir "$d"
        if [[ $? != "0" ]]; then
            echo "mkdir failed"
            exit 45
        fi
    fi

    echo "$fname -> $hdfs_name"

    hadoop fs -test -e "$hdfs_name"
    if [[ $? == "0" ]]; then
        if [[ $clobber == "Y" ]]; then
            hadoop fs -rm -skipTrash "$hdfs_name"
            if [[ $? != "0" ]]; then
                echo "remove failed"
                exit 45
            fi
        fi
    fi

    hadoop fs -put "$fname" "$hdfs_name"
    if [[ $? != "0" ]]; then
        echo "copy failed"
        exit 45
    fi

done
