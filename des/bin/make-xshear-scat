#!/usr/bin/env python
"""
match xshear ascii scat inputs
"""
from __future__ import print_function
import os,sys
import des
import argparse

parser = argparse.ArgumentParser(description=__doc__)
parser.add_argument("scat_vers", 
                    help=("the scat version. corresponds to "
                          "config/{version}.yaml.  E.g. scat-001"))
parser.add_argument("-t", "--tilename",
                    help="only match this tilename")
   
def main():
    args = parser.parse_args()

    if args.tilename is not None:
        tilenames=[args.tilename]
    else:
        tilenames=None
    des.scat.make_xshear_input(args.scat_vers,tilenames=tilenames)

main()
