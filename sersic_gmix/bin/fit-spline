#!/usr/bin/env python
import sys
import sersic_gmix
import esutil as eu

def main():

    ngauss=int(sys.argv[1])
    nvals=sys.argv[2:]

    nvals=[float(n) for n in nvals]

    fnames=['sersic-%.2f-ngauss-%d-fit.fits' % (n,ngauss) for n in nvals]

    data=eu.io.read(fnames,combine=True)
    data=renorm(data)
    nvals=numpy.array(nvals)

    sersic_gmix.spline_fitting.fit_spline(data, nvals, 'T')
    sersic_gmix.spline_fitting.fit_spline(data, nvals, 'flux')

main()
