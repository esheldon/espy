#!/usr/bin/env python
import os

def nformat(n):
    if n < 10:
        return '%0.1f' % n
    else:
        return '%d' % n

# can iterate on lines from popen
lines = os.popen('du -a --block-size=1 --max-depth=1 | sort -n')
for line in lines:

    ls = line.split('\t')
    size = int(ls[0])
    rest = ls[1]

    if size < 1024:
        psize = nformat(size)
    elif size < 1024**2:
        psize = nformat(size/1024.)+'K'
    elif size < 1024**3:
        psize = nformat(size/(1024.**2))+'M'
    else:
        psize = nformat(size/(1024.**3))+'G'

    print "%s\t%s" % (psize,rest),
